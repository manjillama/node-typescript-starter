{
  "name": "typescript-node-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/src/index",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "prepare": "husky install",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "lint:fix": "prettier-eslint '*/**/*.{js,ts,tsx}' --write",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll --detectOpenHandles --coverage",
    "debug": "ndb NODE_ENV=development ts-node src/index.ts",
    "seed:import": "NODE_ENV=development ts-node src/seeds/index.ts --import",
    "seed:delete": "NODE_ENV=development ts-node src/seeds/index.ts --delete",
    "validate": "yarn lint && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manjillama/typescript-node-boilerplate.git"
  },
  "author": "Manjil Tamang <lamamanjil@gmail.com>",
  "license": "MIT",  
  "bugs": {
    "url": "https://github.com/manjillama/typescript-node-boilerplate/issues"
  },
  "homepage": "https://github.com/manjillama/typescript-node-boilerplate#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.3.0",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "joi": "^17.4.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.13.5",
    "morgan": "^1.10.0",
    "short-uuid": "^4.2.0",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.7",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/morgan": "^1.9.3",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "ndb": "^1.1.5",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "prettier-eslint-cli": "^5.0.1",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
